generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Monuments {
  id          String   @id @default(cuid())
  name        String
  description String
  imageUrl    String
  location    String
  rating      Float 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  bookings    Bookings[]

  @@map("monuments")
}

model Bookings {
  id          String     @id @default(cuid())
  monumentId  String
  monument    Monuments  @relation(fields: [monumentId], references: [id])
  userName    String
  userEmail   String
  bookingDate DateTime
  pax         Int
  totalAmount Int        // Total amount including convenience fee
  createdAt   DateTime   @default(now())

  @@map("bookings")
}